class vehiculo:

    def __init__(self, modelo, tiempo, placas,distancia_recorrida):
        self.modelo = modelo
        self.tiempo = tiempo
        self.placas = placas
        self.distancia = distancia_recorrida

    def describir(self):
        descripcion = f"Modelo: {self.modelo}, placas: {self.placas}, tiempo recorrido(h): {self.tiempo}, distancia recorrida(kh): {self.distancia}"
        print(descripcion)

class taxi(vehiculo):

    def a単adir_tiempo(self, tiempo):
        print(f"El recorrido duro {tiempo} h")
        self.tiempo = tiempo
        return self.tiempo
    
    def a単adir_distancia(self, distancia_final):
        print(f"El taxi recorrio {distancia_final} km")
        self.distancia += abs(distancia_final)
        return self.distancia
    
    def cobrar(self, distancia, tiempo):
        print(f"El valor a pagar es {(distancia/tiempo)*3} euros.")

carro = taxi(modelo="Ferrari", placas="HFH-357", tiempo=0, distancia_recorrida=0)
carro.describir()
carro.cobrar(carro.a単adir_distancia(100), carro.a単adir_tiempo(1))